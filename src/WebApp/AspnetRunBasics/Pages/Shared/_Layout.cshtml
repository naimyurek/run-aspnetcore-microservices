                    </ul>
                </div>
                <div class="col-12 copyright mt-3">
                    <p class="float-left">
                        <a href="#">Back to top</a>
                    </p>
                    <p class="text-right text-muted">created with <i class="fa fa-heart"></i> by <a href="https://t-php.fr/43-theme-ecommerce-bootstrap-4.html"><i>t-php</i></a> | <span>v. 1.0</span></p>
                </div>
            </div>
        </div>
    </footer>


    <div class="canvas-menu drawer-left mm-wrapper active">
        <div class="canvas-header-box d-flex justify-content-center align-items-center">
            <div class="close-box"><i class="zmdi zmdi-close"></i></div>
        </div>
        <nav id="canvas-main-menu" class="mm-menu">
            <div class="mm-panels">
                <div class="mm-panel mm-opened" id="SiteNav">
                    <ul class="site-nav list--inline mm-listview">

                        <li class="site-nav" aria-controls="SiteNavLabel-home">
                            <a asp-area="" asp-page="/Index" class="site-nav__link site-nav__link--main">
                                <span>Home</span>
                            </a>


                        </li>

                        <li class="site-nav" aria-controls="SiteNavLabel-product">
                            <a asp-area="" asp-page="/Product" class="site-nav__link site-nav__link--main">
                                <span>Product</span>
                            </a>

                        </li>

                        <li class="site-nav" aria-controls="SiteNavLabel-product">
                            <a asp-area="" asp-page="/Order" class="site-nav__link site-nav__link--main">
                                <span>Order</span>
                            </a>

                        </li>


                        <li class="site-nav" aria-controls="SiteNavLabel-pages">
                            <a asp-area="" asp-page="/Cart" class="site-nav__link site-nav__link--main">
                                <span>Cart</span>
                            </a>


                        </li>

                        <li class="site-nav" aria-controls="SiteNavLabel-blog">
                            <a asp-area="" asp-page="/Contact" class="site-nav__link site-nav__link--main">
                                <span>Contact</span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>


    <div id="stickymenu_bottom_mobile" class="d-flex align-items-center justify-content-center d-md-none text-center">
        <div class="stickymenu-item"><a asp-area="" asp-page="/Index"><i class="icon-home"></i><span>Home</span></a></div>
        <div class="stickymenu-item"><a asp-area="" asp-page="/Product"><i class="icon-wishlist"></i><span>Products</span></a></div>
        <div class="stickymenu-item">
            <a asp-area="" asp-page="/Cart" class="nov-toggle-page" data-target="#mobile-blockcart">
                <span id="_mobile_cart_count" class="cart-products-count"><span id="CartCountMobil">@{}</span></span><i class="icon-shopping-cart"></i><span>Cart</span>
            </a>
        </div>
        <div class="stickymenu-item"><a href="#" class="nov-toggle-page" data-target="#mobile-pageaccount"><i class="icon-account"></i><span>Setting</span></a></div>
        <div class="stickymenu-item">
            <div id="back_top">
                <div>
                    <i class="icon-arrow-up"></i>
                    <div class="on_top">On Top</div>
                </div>
            </div>
        </div>
    </div>

    <div class="canvas-overlay"></div>
    <div class="sidebar-overlay"></div>


    <!-- JS -->
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="//code.jquery.com/jquery-3.2.1.slim.min.js" type="text/javascript"></script>*@
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/shopscript.js"></script>
    <script>

        async function UpdateCount() {
            let url = '/basket/getdata';
            try {
                let res = await fetch(url);
                let value = await res.json();

                $('#CartCount')[0].innerHTML = value;
                $('#CartCountMobil')[0].innerHTML = value;

            } catch (error) {
                console.log(error);
            }
        }

        UpdateCount();

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>




