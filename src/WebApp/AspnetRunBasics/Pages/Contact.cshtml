@page
@model AspnetRunBasics.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">E-COMMERCE CONTACT</h1>
        <p class="lead text-muted mb-0">Contact Page build with Bootstrap 4 !</p>
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Contact</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

@Html.ValidationSummary(true)

<div class="container">
    <div class="row">
        <div class="col">
            <div id="info-contact">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong id="info-contact-text"></strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h1 class="headingPage">Bize Ulaşın</h1>

    <div id="shopify-section-nov-page-contact" class="shopify-section index-section page-contact">
        <div class="boxInformationImage">
            <div class="row">
                <div class="col-md-4 d-flex mb-sm-30">
                    <div class="content">
                        <div class="tt_i_contact">Call Customer Services :</div>
                        <div class="sub_i_contact sub_bold">84-0123-456-789</div>
                    </div>
                </div>
                <div class="col-md-4 d-flex mb-sm-30 align-items-lg-center">

                    <div class="content">
                        <div class="tt_i_contact">Address :</div>
                        <div class="sub_i_contact">PO Box 1622 Vissaosang Street West</div>
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-lg-center">

                    <div class="content">
                        <div class="tt_i_contact">Email :</div>
                        <div class="sub_i_contact">Support@domain.com</div>
                    </div>
                </div>
            </div>
        </div>

        <div id="MapSection--nov-page-contact" class="map-section  " data-section-id="nov-page-contact" data-section-type="map">
            <div class="page-width map-section__wrapper">
                <div class="map-section__content-wrapper"><div class="map-section__content"></div></div>
                <div class="map-section__background-wrapper">
                    <div class="map-section__container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4082.7742465747338!2d-79.38287617561478!3d43.64905556573276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x882b34d2a57d767f%3A0x935ab2eb9fd5fb31!2sFirst%20Canadian%20Place!5e0!3m2!1svi!2s!4v1591603052999!5m2!1svi!2s" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
            </div>
        </div>

        <div class="formContactUs">
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-12 col-xs-12">
                    <div class="contact_message">
                        <div class="block_social">
                            <ul class="list-inline mb-0">

                                <li class="list-inline-item">
                                    <a href="https://facebook.com/vinovatheme" title="Greenbee 3 on Facebook">
                                        <i class="zmdi zmdi-facebook"></i>
                                    </a>

                                </li>

                                <li class="list-inline-item">
                                    <a href="https://twitter.com/vinovatheme" title="Greenbee 3 on Twitter">
                                        <i class="zmdi zmdi-twitter"></i>
                                    </a>

                                </li>
                                <li class="list-inline-item">
                                    <a href="https://pinterest.com/vinovatheme" title="Greenbee 3 on Pinterest">
                                        <i class="fa fa-pinterest" aria-hidden="true"></i>
                                    </a>

                                </li>
                                <li class="list-inline-item">
                                    <a href="https://vimeo.com/vinovatheme" title="Greenbee 3 on Vimeo">
                                        <i class="fa fa-vimeo" aria-hidden="true"></i>
                                    </a>

                                </li>

                                <li class="list-inline-item">
                                    <a href="https://instagram.com/vinovatheme" title="Greenbee 3 on Instagram">
                                        <i class="fa fa-instagram" aria-hidden="true"></i>
                                    </a>

                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12">
                    <div class="contact-form form-vertical">
                        <form method="post" asp-page="Contact" asp-page-handler="ContactForm" id="contact_form" accept-charset="UTF-8" class="contact-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="form_type" value="contact"><input type="hidden" name="utf8" value="✓">
                            <div class="form-group row spacing-10">
                                <div class="col-md-6 mb-sm-10">
                                    @Html.ValidationMessage("Name")
                                    <input type="text" id="ContactFormName" name="Name" class="" placeholder="Adınız Soyadınız" required="" value="">
                                </div>
                                <div class="col-md-6">
                                    @Html.ValidationMessage("Email")
                                    <input type="email" id="ContactFormEmail" name="Email" class="" placeholder="E-Posta Adresiniz" required="" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    @Html.ValidationMessage("Phone")
                                    <input type="tel" id="ContactFormPhone" name="Phone" pattern="[0-9\-]*" class="" placeholder="Telefonunuz" value="">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    @Html.ValidationMessage("Message")
                                    <textarea rows="15" cols="50" id="ContactFormMessage" name="Message" required="" placeholder="Mesajınız"></textarea>
                                </div>
                            </div>
                            <button class="btn btn_message" type="submit">
                                <i class="icon-message"></i><span>Mesaj Gönder</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

     $(function () {
        var value = '@(TempData["ContactInfo"])';
         if (value != "" && value != null) {
             $("#info-contact").show();
             $("#info-contact-text").text(value);
     
                 $("#ContactFormMessage").val("")
                 $("#ContactFormName").val("")
                 $("#ContactFormPhone").val("")
                 $("#ContactFormEmail").val("")
     
         } else {
             $("#info-contact").hide();
         }
     });

    </script>>
}

